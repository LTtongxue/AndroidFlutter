<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 右边滑入右边滑出 -->
    <style name="activity_switch_translate_right" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/FadeAnimationStyle</item>
    </style>

    <style name="FadeAnimationStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/no_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
    </style>
</resources>
